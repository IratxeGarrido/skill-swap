<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <div class="">
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>
  </div>

  <%= f.button :submit, class: "btn-flat" %>
<% end %>

<%= render "devise/shared/links" %>
