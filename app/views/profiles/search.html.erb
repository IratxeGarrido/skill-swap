<%# FILTERS AND SEARCH LOGIC %>
<%= simple_form_for :search, url: profiles_path, method: "GET", html: { class: "form index-form" } do |f| %>
  <div class="filter-container">

    <div class="filter-div" data-controller="checkbox">
      <div class="panel">
        <%= f.input :offer,
          as: :radio_buttons,
          collection_wrapper_tag: 'div',
          collection_wrapper_class: 'category-wrapper-1',
          item_wrapper_class: 'tag-item',
          input_html: {class: 'tag-selector'},
          collection: [
                          [('photography').html_safe, "photography"],
                          [('art').html_safe, "art"],
                          [('coding').html_safe, "coding"],
                          [('ceramics').html_safe, "ceramics"],
                          [('textiles').html_safe, "textiles"],
                        ] %>

        <%= f.submit %>

<% end %>
