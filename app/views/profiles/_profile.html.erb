    <div class="total-profile" data-controller="swipe" data-swipe-profile-value=<%= profile.id %>>
      <div class="profile-card" data-swipe-target="swipeCard" >
        <div class="p-card" style="background-image: url('<%= cl_image_path(profile.photo.key) if profile.photo.attached? %>'); width: 360px; height: 468px;"></div>
        <div class="frame">
          <div class="div">
            <div class="avatar">
              <div class="avatar-2"></div>
              <div class="skill-title"><%= profile.first_name %></div>
            </div>
            <div class="location-buttons">
              <img class="vector" src="img/vector.svg" />
              <div class="text">Nearby</div>
            </div>
          </div>
          <div class="skill-description">
            <div class="skill-title-2">
              About Me
            </div>
            <p class="p"><%= profile.bio %></p>
          </div>
            <div class="d-flex justify-content-between position-absolute">
              <%= link_to swipe_left_path(profile: profile), data: {turbo_method: :patch, swipel_target: "button"} do %>
                <i class="fa-solid fa-xmark fa-2xl" style="color: #f7dd36"></i>
              <% end %>
              <%= link_to swipe_right_path(profile: profile), data: {turbo_method: :patch} do %>
                <i class="fa-solid fa-heart fa-2xl" style="color: #f7dd36"></i>
              <% end %>
              <%= simple_form_for @match, data: { swipe_target: "dislikeForm" },  html: { class: 'd-none' } do |f| %>
                <%= f.input :profile, as: :hidden, input_html: { value: profile.id } %>
                <%= f.input :form, as: :hidden, input_html: { value: "dislike" }%>
                <%= f.submit %>
              <% end %>
              <%= simple_form_for @match, data: { swipe_target: "likeForm" },  html: { class: 'd-none' } do |f| %>
                <%= f.input :profile, as: :hidden, input_html: { value: profile.id } %>
                <%= f.input :form, as: :hidden, input_html: { value: "like" }%>
                <%= f.submit %>
              <% end %>
          </div>
        </div>
      </div>
      <%= render "offers/show", locals: {profile_id: @profile.id} %>
    </div>
