<%= simple_form_for (profile) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :bio %>
  <%= f.input :age %>
  <%= f.input :address %>
  <%= f.input :gender, collection: %w(Male Female Diverse PreferNotToSay) %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "btn-flat" %>
<% end %>
