<div class="profiles-all" data-controller="swipe">
  <div class="floating-icon">
    <i class="fa fa-remove gone" data-swipe-target="nope"></i>
    <i class="fa fa-heart gone" data-swipe-target="like"></i>
  </div>
  <div class="profile-cards">
  <% @profiles.each do |profile| %>
    <div class="single-card"
        data-swipe-target="swipeCard" data-swipe-profile-value=<%= profile.id %>>
                  <div class="frame">
                <div class="avatar">
                  <div class="avatar-pic" >
                    <%= cl_image_tag profile.photo.key, class: "avatar-pic" %>
                  </div>
                  <div class="profile-title"><%= profile.first_name %></div>
                </div>
                <% if Profile.near(current_user.profile, 2).select{ |user| user.id == profile.id }.length == 1%>
                  <div class="location-buttons">
                    <i class="fa-solid fa-location-arrow" style="color: #ffffff;"></i>
                    <div class="text">Nearby</div>
                  </div>
                <% end %>
              </div>
        <%= render "offer", profile: profile %>
        <%= render "profile", profile: profile %>
    </div>
  <% end %>
  </div>
</div>
